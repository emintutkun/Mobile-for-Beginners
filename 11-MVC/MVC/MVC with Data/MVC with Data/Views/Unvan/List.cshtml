@model List<MVCwithData.Models.Classes.Unvan>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-7">
            <form method="post" action=" /Unvan/Create">
                <a class="btn btn-primary" href="/Unvan/Create">Yeni Kayıt</a>
            </form>
            <h2>Ünvan Listesi</h2>

            <hr />
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Ad</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UnvanId</td>
                            <td>@item.UnvanAd</td>
                            <td><a class="btn btn-danger" href="/Unvan/Delete/@item.UnvanId">Sil</a></td>
                            <td><a class="btn btn-success" href="/Unvan/Update/@item.UnvanId">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
